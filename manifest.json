{
  "manifest_version": 3,
  "name": "Scopify",
  "description": "",
  "version": "1.0",
  "permissions": [
    "sidePanel",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://scope.sciencecoop.ubc.ca/myAccount/co-op/postings.htm"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Click to open Scopify panel"
  },
  "side_panel": {
    "default_path": "sidepanel/side_panel.html"
  },
  "icons": {
    "16": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self';"
  }
}
